<div class="container my-5">
  <h1 class="text-center mb-4 text-dark fw-light">ðŸŽ¬ <span class="fw-bold">Your Movie Lists</span> ðŸŽ¥</h1>

  <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
    <% @lists.each do |list| %>
      <div class="col">
        <div class="card border-light shadow-sm h-100">
          <div class="card-header bg-light text-dark text-center fw-bold fs-5">
            <%= link_to list.name, list_path(list), class: "text-decoration-none text-dark" %>
          </div>

          <div class="card-body d-flex flex-column align-items-center justify-content-center">
            <p class="fs-6 text-muted mb-3">
              <i class="bi bi-collection-play"></i>
              <strong><%= list.bookmarks.count %></strong>
              <%= "movie".pluralize(list.bookmarks.count) %>
            </p>
          </div>

          <div class="card-footer bg-light d-flex justify-content-between">
            <%= link_to "View List", list_path(list), class: "btn btn-outline-dark btn-sm fw-bold" %>
            <%= link_to "Delete",
                        list_path(list),
                        data: { turbo_method: :delete, turbo_confirm: "Are you sure?" },
                        class: "btn btn-outline-danger btn-sm fw-bold" %>
          </div>
        </div>
      </div>
    <% end %>
  </div>

  <div class="text-center mt-4">
    <%= link_to "Add a New List", new_list_path, class: "btn btn-dark btn-lg px-4 fw-bold" %>
  </div>
</div>
