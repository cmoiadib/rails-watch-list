<div class="col">
        <!-- List Card -->
        <div class="card bg-dark text-light border-0 shadow-lg h-100 hover-effect">
          <!-- Card Header with Title -->
          <div class="card-header bg-warning text-dark text-center fw-bold">
            <%= link_to list.name, list_path(list), class: "text-decoration-none" %>
          </div>

          <div class="card-body d-flex flex-column">
            <!-- Movie Posters -->
            <div class="d-flex flex-wrap gap-2 justify-content-center mb-3">
              <% list.bookmarks.limit(4).each do |bookmark| %>
                <div class="poster-thumbnail">
                  <%= image_tag bookmark.movie.poster_url,
                                class: "img-fluid rounded-3 shadow-sm border border-secondary",
                                alt: "#{bookmark.movie.title} Poster",
                                style: "width: 75px; height: 110px; object-fit: cover;" %>
                </div>
              <% end %>
              <% if list.bookmarks.empty? %>
                <div class="bg-secondary d-flex align-items-center justify-content-center text-light"
                     style="width: 100%; height: 110px; border-radius: 8px;">
                  <span>No Movies Added</span>
                </div>
              <% end %>
            </div>

            <!-- Card Footer with Buttons -->
            <div class="mt-auto d-flex justify-content-between">
              <%= link_to "View List", list_path(list), class: "btn btn-warning btn-sm fw-bold" %>
              <%= link_to "Delete",
                          list_path(list),
                          data: { turbo_method: :delete, turbo_confirm: "Are you sure?" },
                          class: "btn btn-danger btn-sm fw-bold" %>
            </div>
          </div>
        </div>
      </div>

