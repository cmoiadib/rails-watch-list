<h1 class="text-center my-4"><%= @list.name %></h1>

<!-- Link to Add a New Bookmark -->
<div class="text-center mb-4">
  <%= link_to "Add a Movie", new_list_bookmark_path(@list), class: "btn btn-primary btn-lg" %>
    <%= link_to "Back to Home", root_path, class: "btn btn-outline-secondary btn-lg" %>
</div>


<!-- Display Bookmarks -->
<div class="list-group">
  <% if @list.bookmarks.any? %>
    <% @list.bookmarks.each do |bookmark| %>
      <div class="list-group-item p-3 mb-3 shadow-sm">
        <div class="d-flex align-items-start">
          <!-- Movie Poster -->
          <div class="flex-shrink-0 me-3">
            <%= image_tag bookmark.movie.poster_url, class: "img-fluid rounded",
                          alt: bookmark.movie.title,
                          style: "width: 80px; height: 120px; object-fit: cover;" if bookmark.movie.poster_url.present? %>
          </div>

          <!-- Movie Details -->
          <div class="flex-grow-1">
            <h5 class="mb-1"><%= bookmark.movie.title %></h5>
            <p class="mb-2 text-muted" style="font-size: 0.9rem;"><%= bookmark.comment %></p>

            <!-- Remove Button -->
            <%= link_to "Delete bookmark", bookmark_path(bookmark), class: "btn btn-danger btn-sm", data: { turbo_method: :delete, turbo_confirm: "Are you sure?" } %></div>
          </div>
        </div>
      </div>
    <% end %>
  <% else %>
    <div class="text-center">
      <p>No bookmarks yet. Add your first movie!</p>
    </div>
  <% end %>
</div>
