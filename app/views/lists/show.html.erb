<div class="container">
  <h1 class="text-center my-4 text-gray-700"><%= @list.name %></h1>
  <div class="text-center mb-4">
    <%= link_to "Add a Movie", new_list_bookmark_path(@list), class: "btn btn-primary btn-lg" %>
    <%= link_to "Back to Home", root_path, class: "btn btn-outline-secondary btn-lg" %>
  </div>

  <% if @list.bookmarks.any? %>
    <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 row-cols-lg-4 g-4">
      <% @list.bookmarks.each do |bookmark| %>
        <div class="col">
          <div class="card shadow-sm h-100 rounded-5">
            <img src="<%= bookmark.movie.poster_url %>" class="card-img-top rounded-top-5" alt="<%= bookmark.movie.title %> Poster">
            <div class="card-body">
              <h5 class="card-title"><%= bookmark.movie.title %></h5>
              <p class="card-text"><%= bookmark.comment %></p>
            <%= link_to "Delete", bookmark_path(bookmark), class: "btn btn-danger text-white rounded-4", data: { turbo_method: :delete, turbo_confirm: "Are you sure?" } %>            </div>
          </div>
        </div>
      <% end %>
    </div>
  <% else %>
  <p class="text-center text-gray-600">No movies added yet. Add your first movie!</p>
  <% end %>
</div>
